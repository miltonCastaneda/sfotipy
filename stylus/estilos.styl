@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333
gris_claro = #818181


a
	text-decoration: none
body
	font-family 'varela Round', sans-serif
	font-size 16px
figure
	margin 0
.button-menu
	color gris_oscuro
	left .5em 
	margin-top -10px
	position absolute
	top 50%
//oocss
.relative
	position relative
.container
	padding 1.4rem
	font-size 0
	text-align center
.border-bottom
	border-bottom 1px solid gris_claro
.name
	color gris_oscuro
.menu
	display none

.author
	color gris_claro
.header
	height 3.5em
	.title
		font-size 1.1em
		text-align  center
		margin 0
		line-height 3.5em
.song
	
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	width 8rem
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

